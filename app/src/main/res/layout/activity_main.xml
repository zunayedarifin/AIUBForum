<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zunay.aiubforum.MainActivity">



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycleView" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posting_widget"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:layout_alignBottom="@id/recycleView"
        android:layout_alignRight="@id/recycleView"
        android:clickable="true"
        app:backgroundTint="#4e5be7"
        android:src="@drawable/iconsplus"
        app:fabSize="normal"/>


</RelativeLayout>
