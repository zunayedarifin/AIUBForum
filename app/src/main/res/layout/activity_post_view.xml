<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zunay.aiubforum.PostView">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/postRelativeLayout"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/postDescriptionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/common_google_play_services_unknown_issue" />

        <ImageView
            android:id="@+id/postImageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/postDescriptionId"
            android:src="@mipmap/ic_launcher" />
        <Button
            android:layout_below="@id/postImageId"
            android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reply" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/postRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleViewComment" />

</RelativeLayout>
